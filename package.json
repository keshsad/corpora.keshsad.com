{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "extendo",
  "title": "extendo",
  "description": "Opinionated, hand-crafted commands for modern, high-performance people.",
  "icon": "extension-icon.png",
  "author": "rishi-sadanandan",
  "owner": "rishi-sadanandan",
  "license": "MIT",
  "ai": {
    "instructions": "When you don't know the user's working directory, ask for it."
  },
  "commands": [
    {
      "name": "detail",
      "title": "Explain Extension",
      "description": "Explain this extension with AI.",
      "mode": "view",
      "subtitle": "Extendo",
      "arguments": [
        {
          "name": "question",
          "placeholder": "Question",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "list",
      "title": "View Corpora",
      "description": "List all Corpora from LocalStorage.",
      "mode": "view",
      "subtitle": "Extendo"
    },
    {
      "name": "form",
      "title": "New Corpus",
      "description": "Set a new Corpus into LocalStorage.",
      "mode": "view",
      "subtitle": "Extendo"
    },
    {
      "name": "fetch",
      "title": "Fetch Context",
      "description": "Fetch Context from a Corpus.",
      "mode": "view",
      "subtitle": "Extendo"
    },
    {
      "name": "update",
      "title": "Update Context",
      "description": "Update Context from a Corpus.",
      "mode": "view",
      "subtitle": "Extendo"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.4",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
